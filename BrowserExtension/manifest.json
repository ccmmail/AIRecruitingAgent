{
  "manifest_version": 3,
  "name": "AI Recruiting Agent",
  "version": "1.0.0",
  "description": "AI-powered job application helper that analyzes job descriptions and tailors your resume",
  "permissions": ["activeTab", "storage", "tabs"],
  "host_permissions": ["http://localhost:8000/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Recruiting Agent"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
